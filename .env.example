# ================================================
# BINANCE API CREDENTIALS
# ================================================
# Получить на: https://testnet.binance.vision/ (для тестирования)
# Или: https://www.binance.com/en/my/settings/api-management (production)

BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Testnet URLs (для разработки)
BINANCE_BASE_URL=https://testnet.binance.vision
BINANCE_WS_URL=wss://testnet.binance.vision/ws

# Production URLs (использовать только после тестирования!)
# BINANCE_BASE_URL=https://api.binance.com
# BINANCE_WS_URL=wss://stream.binance.com:9443

# ================================================
# SECURITY & ENCRYPTION
# ================================================

# Генерация ключа шифрования (256-bit):
# В elixir console: 32 |> :crypto.strong_rand_bytes() |> Base.encode64()
CLOAK_KEY=your_base64_encoded_256bit_key_here

# Phoenix secret key base (генерация: mix phx.gen.secret)
SECRET_KEY_BASE=your_phoenix_secret_key_base_here

# ================================================
# DATABASE CONFIGURATION
# ================================================

# PostgreSQL connection string
DATABASE_URL=postgres://postgres:postgres@localhost:5432/binance_trading_dev
DATABASE_POOL_SIZE=10

# Production settings
# DATABASE_SSL=true
# DATABASE_SSL_VERIFY=verify_none

# ================================================
# REDIS CONFIGURATION (опционально)
# ================================================

REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=5

# ================================================
# PHOENIX CONFIGURATION
# ================================================

PHX_HOST=localhost
PORT=4000
MIX_ENV=dev

# ================================================
# MONITORING & LOGGING
# ================================================

ENABLE_TELEMETRY=true
LOG_LEVEL=info

# Grafana (опционально)
# GRAFANA_API_KEY=your_grafana_api_key
# GRAFANA_URL=http://localhost:3000

# ================================================
# TRADING SETTINGS (настройки по умолчанию)
# ================================================

# Максимальный размер позиции в USD
MAX_POSITION_SIZE=1000

# Процент от баланса на одну сделку
TRADE_SIZE_PERCENT=2.0

# Stop loss процент
STOP_LOSS_PERCENT=2.0

# Take profit процент
TAKE_PROFIT_PERCENT=3.0

# Включить бумажную торговлю (paper trading)
PAPER_TRADING=true

# ================================================
# RATE LIMITING
# ================================================

# Binance rate limits (не изменять без необходимости)
BINANCE_WEIGHT_LIMIT_1M=6000
BINANCE_ORDERS_LIMIT_10S=50
BINANCE_ORDERS_LIMIT_1D=160000

# ================================================
# PROXY SETTINGS (опционально, для мультиаккаунтинга)
# ================================================

# PROXY_ENABLED=false
# PROXY_HOST=your_proxy_host
# PROXY_PORT=8080
# PROXY_USER=proxy_username
# PROXY_PASS=proxy_password

# ================================================
# NOTIFICATION SETTINGS (опционально)
# ================================================

# Telegram bot
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email notifications
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# NOTIFICATION_EMAIL=alerts@yourdomain.com

# ================================================
# DEVELOPMENT SETTINGS
# ================================================

# Включить Phoenix LiveDashboard
ENABLE_LIVE_DASHBOARD=true

# Включить подробное логирование SQL запросов
LOG_SQL_QUERIES=false

# Включить debug режим для WebSocket
WS_DEBUG=false
